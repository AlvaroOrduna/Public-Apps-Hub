<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_detail_services_height"
        android:layout_gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:minWidth="@dimen/app_detail_services_minWidth"
        android:orientation="vertical"
        android:padding="@dimen/keyline_8dp">

        <TextView
            android:id="@+id/item_service_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_service_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1" />

    </LinearLayout>

</android.support.v7.widget.CardView>