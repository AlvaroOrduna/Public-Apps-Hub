<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.AppDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                style="@style/DetailActivity.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/keyline_8dp"
                android:text="@string/app_detail_name_title"/>

            <TextView
                android:id="@+id/app_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/DetailActivity.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/keyline_8dp"
                android:paddingTop="@dimen/keyline_16dp"
                android:text="@string/app_detail_category_title"/>

            <TextView
                android:id="@+id/app_detail_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/DetailActivity.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/keyline_8dp"
                android:paddingTop="@dimen/keyline_16dp"
                android:text="@string/app_detail_description_title"/>

            <TextView
                android:id="@+id/app_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                style="@style/DetailActivity.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/keyline_8dp"
                android:paddingTop="@dimen/keyline_16dp"
                android:text="@string/app_detail_visual_description_title"/>

            <TextView
                android:id="@+id/app_detail_visual_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_detail_visual_description_not_available"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/app_images_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
