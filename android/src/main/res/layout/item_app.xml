<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/app_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_list_header_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/keyline_16dp"
        android:paddingRight="@dimen/keyline_16dp"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/app_content_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_list_item_height"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/keyline_16dp"
        android:paddingRight="@dimen/keyline_16dp">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2" />

    </LinearLayout>

</LinearLayout>