<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.ordunaleon.publicappshub">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DetailActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.ordunaleon.publicappshub.MainActivity" />
        </activity>

        <activity
            android:name=".AddActivity"
            android:label="@string/title_activity_add"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.ordunaleon.publicappshub.MainActivity" />
        </activity>

        <activity
            android:name=".ImageActivity"
            android:label="@string/app_name"
            android:parentActivityName=".DetailActivity"
            android:theme="@style/AppTheme.ImageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.ordunaleon.publicappshub.DetailActivity" />
        </activity>

        <provider
            android:name=".model.PublicAppsHubProvider"
            android:authorities="io.ordunaleon.publicappshub.model"
            android:exported="false" />

    </application>

</manifest>